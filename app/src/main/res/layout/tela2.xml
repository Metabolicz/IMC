<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<TextView
    android:id="@+id/titulo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Avaliação Nutricional"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginTop="50dp" />
    <TextView
        android:id="@+id/nome1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome: "
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titulo"
        app:layout_constraintRight_toLeftOf="@+id/nome2"
        android:layout_marginTop="50dp"
        android:layout_marginStart="50dp"/>
    <TextView
        android:id="@+id/nome2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lucas"
        app:layout_constraintLeft_toRightOf="@+id/nome1"
        app:layout_constraintTop_toBottomOf="@+id/titulo"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp" />
    <TextView
        android:id="@+id/idade1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Idade: "
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nome1"
        app:layout_constraintRight_toLeftOf="@+id/idade2"
        android:layout_marginTop="50dp"
/>
    <TextView
        android:id="@+id/idade2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25"
        app:layout_constraintLeft_toLeftOf="@+id/nome2"
        app:layout_constraintLeft_toRightOf="@+id/idade1"
        app:layout_constraintTop_toBottomOf="@+id/nome1"

        android:layout_marginTop="50dp" />
    <TextView
        android:id="@+id/peso1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Peso: "
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idade1"
        app:layout_constraintRight_toLeftOf="@+id/peso2"
        android:layout_marginTop="50dp"
        />
    <TextView
        android:id="@+id/peso2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="86"
        app:layout_constraintLeft_toLeftOf="@+id/nome2"
        app:layout_constraintLeft_toRightOf="@+id/peso1"
        app:layout_constraintTop_toBottomOf="@+id/idade1"
        android:layout_marginTop="50dp" />
    <TextView
        android:id="@+id/altura1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Altura: "
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/peso1"
        app:layout_constraintRight_toLeftOf="@+id/altura2"
        android:layout_marginTop="50dp"
        />
    <TextView
        android:id="@+id/altura2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="173"
        app:layout_constraintLeft_toLeftOf="@+id/nome2"
        app:layout_constraintLeft_toRightOf="@+id/altura1"
        app:layout_constraintTop_toBottomOf="@+id/peso1"
        android:layout_marginTop="50dp" />
    <TextView
        android:id="@+id/imc1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IMC: "
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/altura1"
        app:layout_constraintRight_toLeftOf="@+id/imc2"
        android:layout_marginTop="50dp"
        />
    <TextView
        android:id="@+id/imc2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20"
        app:layout_constraintLeft_toLeftOf="@+id/nome2"
        app:layout_constraintLeft_toRightOf="@+id/imc1"
        app:layout_constraintTop_toBottomOf="@+id/altura1"
        android:layout_marginTop="50dp" />
    <TextView
        android:id="@+id/clas1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Classificação: "
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imc1"
        app:layout_constraintRight_toLeftOf="@+id/clas2"
        android:layout_marginTop="50dp"
        />
    <TextView
        android:id="@+id/clas2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Normal"
        app:layout_constraintLeft_toLeftOf="@+id/nome2"
        app:layout_constraintLeft_toRightOf="@+id/clas1"
        app:layout_constraintTop_toBottomOf="@+id/imc1"
        android:layout_marginTop="50dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/clas1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Realizar novo cálculo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:onClick="voltar"/>

</androidx.constraintlayout.widget.ConstraintLayout>